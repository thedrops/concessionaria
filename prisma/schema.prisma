// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(OPERATOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]

  @@map("users")
}

enum Role {
  ADMIN
  OPERATOR
}

model Car {
  id             String     @id @default(cuid())
  brand          String
  model          String
  year           String // Ano de Fabricação
  modelYear      String? // Ano Modelo
  version        String?
  transmission   String?
  doors          Int?
  fuel           String?
  mileage        Int?
  plate          String?    @unique
  color          String?
  passengers     Int? // Quantidade de passageiros
  price          Float
  optionals      String?    @db.Text
  additionalInfo String?    @db.Text
  description    String     @db.Text
  images         String[]   @default([])
  carImages      CarImage[]
  status         CarStatus  @default(AVAILABLE)
  consignado     Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  leads          Lead[]

  @@map("cars")
}

model CarImage {
  id        String   @id @default(cuid())
  carId     String
  car       Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([carId, order])
  @@map("car_images")
}

enum CarStatus {
  AVAILABLE
  SOLD
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  carId     String
  car       Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("leads")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  excerpt   String?
  image     String?
  published Boolean  @default(false)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}

model VehicleQuery {
  id        String   @id @default(cuid())
  plate     String   @unique
  data      Json // Dados da API em formato JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("vehicle_queries")
}

model CarouselImage {
  id        String   @id @default(cuid())
  image     String
  title     String?
  link      String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("carousel_images")
}

model SiteSettings {
  id             String   @id @default(cuid())
  whatsappNumber String   @default("5511999999999")
  companyName    String   @default("Israel Veículos")
  companyEmail   String?
  companyAddress String?
  facebookUrl    String?
  instagramUrl   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("site_settings")
}
